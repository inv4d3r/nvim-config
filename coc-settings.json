{
  "cSpellExt.enableDictionaries": ["polish", "italian", "german"],
  "cSpell.language": "en,de,it,pl",
  "clangd.enabled": false,
  "clangd.checkUpdates": true,
  "clangd.semanticHighlighting": true,
  "clangd.arguments": ["--background-index", "--header-insertion=iwyu", "--suggest-missing-includes", "-j=4", "--log=verbose"],
  "coc.preferences.useQuickfixForLocations": true,
  "git.addGBlameToVirtualText": true,
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "ccls": {
      "command": "ccls",
      "rootPatterns": [ ".ccls", "compile_flags.txt", "compile_commands.json", ".vim", ".git", ".hg"],
      "filetypes": ["c", "cc", "cpp", "c++", "cuda", "objc", "objcpp"],
      "enable": false,
      "initializationOptions": {
        "highlight": {"lsRanges": true}
      }
    },
    "cmake": {
      "command": "cmake-language-server",
      "filetypes": ["cmake"],
      "rootPatterns": [
        "build/"
      ],
      "initializationOptions": {
        "buildDirectory": "build"
      }
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    }
  },
  "cSpell.userWords": [
    "cacl",
    "clangd"
  ]
}
