{
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": ["rust", "python"],
  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.extensionUpdateCheck": "weekly",
  "cSpellExt.enableDictionaries": ["polish", "italian", "german"],
  "cSpell.language": "en,de,it,pl",
  "clangd.enabled": true,
  "clangd.compilationDatabasePath": ".",
  "clangd.checkUpdates": true,
  "clangd.arguments": ["--query-driver=/usr/bin/clang++", "--all-scopes-completion", "--background-index", "--clang-tidy", "--clang-tidy-checks='clang-analyzer-*,cppcoreguidelines-*,modernize-*,performance-*,portability-*,readability-*'", "--cross-file-rename", "--header-insertion=iwyu", "--recovery-ast", "--suggest-missing-includes", "-j=4", "--log=verbose"],
  "git.addGBlameToVirtualText": true,
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "rootPatterns": [ ".ccls", "compile_flags.txt", "compile_commands.json", ".vim", ".git", ".hg"],
      "filetypes": ["c", "cc", "cpp", "c++", "cuda", "objc", "objcpp"],
      "enable": false,
      "initializationOptions": {
        "highlight": {"lsRanges": true},
        "client": {
          "snippetSupport": true
        }
      }
    },
    "cmake": {
      "command": "cmake-language-server",
      "filetypes": ["cmake"],
      "rootPatterns": [
        "build/"
      ],
      "initializationOptions": {
        "buildDirectory": "build"
      }
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    }
  },
  "cSpell.userWords": [
    "cacl",
    "clangd"
  ],
  "Lua.telemetry.enable": false
}
